<Window x:Class="Marafon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Marafon"
        mc:Ignorable="d"
        Title="MainWindow" Style="{DynamicResource base_windows}" Loaded="Window_loaded">
    <Grid>
        <Label Content="{Binding Time, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" HorizontalAlignment="Left" Margin="32,454,0,0" VerticalAlignment="Top"/>
        <Frame Content="Frame" Margin="0,0,0,52" Source="/MainPage.xaml" NavigationUIVisibility="Hidden"/>

    </Grid>
</Window>
